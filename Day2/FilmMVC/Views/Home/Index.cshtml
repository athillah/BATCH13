@{
    ViewData["Title"] = "Home Page";
}

<h2>Film List</h2>

<a href="/Home/Create">Add New Film</a>

<table>
    <thead>
        <tr>
            <th>ID</th><th>Title</th><th>Director</th><th>Year</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var film in Model)
        {
            <tr>
                <td>@film.Id</td>
                <td>@film.Title</td>
                <td>@film.Director</td>
                <td>@film.Year</td>
            </tr>
        }
    </tbody>
</table>
